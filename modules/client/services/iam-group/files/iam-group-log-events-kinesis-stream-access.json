{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "lambda:CreateFunction",
                "lambda:TagResource",
                "kinesis:DeregisterStreamConsumer",
                "logs:DescribeLogGroups",
                "lambda:InvokeFunction",
                "logs:DescribeLogStreams",
                "lambda:GetFunction",
                "kinesis:PutRecords",
                "kinesis:DescribeStreamConsumer",
                "lambda:UpdateFunctionConfiguration",
                "kinesis:CreateStream",
                "kinesis:GetShardIterator",
                "kinesis:DescribeStream",
                "kinesis:RegisterStreamConsumer",
                "lambda:UpdateFunctionCode",
                "kinesis:PutRecord",
                "kinesis:SplitShard",
                "kinesis:MergeShards",
                "lambda:ListTags",
                "logs:GetLogEvents",
                "kinesis:GetRecords",
                "lambda:PublishVersion",
                "logs:FilterLogEvents",
                "lambda:DeleteEventSourceMapping"
            ],
            "Resource": [
                "arn:aws:logs:us-east-2:*:log-group:*",
                "arn:aws:lambda:us-east-2:*:event-source-mapping:*",
                "arn:aws:lambda:us-east-2:*:function:*",
                "arn:aws:kinesis:us-east-2:*:stream/*",
                "arn:aws:kinesis:us-east-2:460093719278:*/*/consumer/*:*"
            ]
        },
        {
            "Sid": "VisualEditor1",
            "Effect": "Allow",
            "Action": [
                "kinesis:ListStreams",
                "lambda:ListFunctions",
                "lambda:GetEventSourceMapping",
                "kinesis:ListShards",
                "kinesis:UpdateShardCount",
                "lambda:CreateEventSourceMapping",
                "kinesis:DescribeLimits",
                "kinesis:ListStreamConsumers"
            ],
            "Resource": "*"
        },
        {
            "Sid": "VisualEditor2",
            "Effect": "Allow",
            "Action": "logs:GetLogEvents",
            "Resource": "arn:aws:logs:us-east-2:*:log-group:*:*:*"
        }
    ]
}